<li class="media border border-primary p-2">
  <img src="<%= user.image %>" class="mr-3 border border-primary rounded-circle" alt="..." width="64" height="64">
  <div class="media-body">
    <div class="d-flex w-100 justify-content-between">
        <h5 class="mt-0"><%= user.name %></h5>
        <%= link_to tweet_path(tweet) do %>
          <small><%= time_ago_in_words(tweet.created_at) %></small>
        <% end %>
    </div>
    <div>
        <!-- <%= tweet.id %>  <!-- Uncomment to see Tweet ID -->
        <%= tweet.content %>

        <!-- Only when RT is present -->
        <%= render 'shared/retweet_layout', rt_id: tweet.tweet_id %>

    </div>
    <div class="row text-center mt-2">
      <div class="col">
        <%= render 'shared/like_status', tweet: tweet %>
      </div>
      <div class="col">
        <%= render 'shared/retweet_status', tweet: tweet %>
      </div>
    </div>
  </div>
</li>