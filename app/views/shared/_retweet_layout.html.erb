<% if id != nil %>
    <div class="media border border-primary p-2">
        <img src="<%= @tweets.get_author_img(id) %>" class="mr-3 border border-primary rounded-circle" alt="..." width="64" height="64">
        <div class="media-body">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mt-0"><%= @tweets.get_author_name(id) %></h5>
                <small><%= @tweets.get_created(id) %></small>
            </div>
            <div>
                <!-- <%= @tweets.get_id(id) %>  <!-- Uncomment to see RTweet ID -->
                <p class="text-justify"><%= @tweets.get_content(id) %></p>
            </div>
        </div>                    
    </div>
<% end %>  